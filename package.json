{
  "name": "uk-river-data",
  "version": "1.0.0",
  "description": "A widget for displaying flow and level data from the UK Environment Agency",
  "browser": "dist/uk-river-data.min.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && rollup -c && npm run test:dist",
    "ci": "npm run lint && npm run test:unit && npm run build",
    "lint": "prettier . --check && eslint .",
    "lint:fix": "prettier . --write && eslint . --fix",
    "test": "npm run lint:fix && npm run test:unit",
    "test:dist": "mocha test/dist/**/*.{spec,test}.{{c,m,}js,ts}",
    "test:unit": "mocha test/unit/**/*.spec.{{c,m,}js,ts}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pb-uk/uk-river-data-widget.git"
  },
  "keywords": [],
  "author": "",
  "bugs": {
    "url": "https://github.com/pb-uk/uk-river-data-widget/issues"
  },
  "homepage": "https://github.com/pb-uk/uk-river-data-widget#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/chai": "^4.3.1",
    "@types/jsdom": "^16.2.14",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "camelcase": "^7.0.0",
    "chai": "^4.3.6",
    "eslint": "^8.15.0",
    "eslint-plugin-mocha": "^10.0.4",
    "jsdom": "^20.0.0",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.73.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "apexcharts": "^3.35.3"
  }
}
